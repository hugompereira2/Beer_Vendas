@model Beer_Vendas.Models.Usuario;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var produtos = ViewBag.Produtos.Result;
}
<style>
    .container img {
        max-width: 150px;
        max-height: 150px;
        width: auto;
        height: auto;
        top: 50%;
        left: 50%;
    }
</style>
<div class="container">
