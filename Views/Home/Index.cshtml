                            <a type="button" href="@Url.Action("Index", new { id = item.pro_id })" class="btn btn-lg btn-block btn-outline-primary">Comprar</a>
                            <button type="button" data-toggle="collapse" data-target="#collapse_@item.pro_id" aria-expanded="true" aria-controls="collapse_@item.pro_id" class="btn btn-sm btn-block btn-outline-primary">Detalhes</button>
                        </div>
                        <div id="collapse_@item.pro_id" class="collapse" aria-labelledby="headingOne" data-parent="#headingOne">
